<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kappa.piece.gamenetjogja.CustomActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Daerah"
        android:id="@+id/txtDaerah"
        android:layout_alignParentLeft="true" />
    <Spinner
        android:id="@+id/spDaerah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/txtDaerah"
        ></Spinner>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH"
        android:id="@+id/btnSearch"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Harga"
        android:id="@+id/txt"
        android:layout_below="@+id/spDaerah"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spHarga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spDaerah"
        android:layout_alignLeft="@+id/spDaerah"
        android:layout_alignStart="@+id/spDaerah"
        android:layout_alignRight="@+id/spDaerah"
        android:layout_alignEnd="@+id/spDaerah" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fasilitas"
        android:id="@+id/txtFasilitas"
        android:layout_below="@+id/spHarga"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spFasilitas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtFasilitas"
        android:layout_toRightOf="@+id/txtFasilitas"
        android:layout_alignRight="@+id/spHarga"
        android:layout_alignEnd="@+id/spHarga" />

</RelativeLayout>
